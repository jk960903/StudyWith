package 스킬트리;

public class Main {
	public static void main(String[] args) {
		String skill="CBD";
		String[] skill_trees= {"BACDE", "CBADF", "AECB", "BDA"};
		for(int i=0; i<skill_trees.length; i++) {

			if(skill_trees[i].contains("a")) {
				System.out.println("!");
			}
		}
		int num=solution(skill,skill_trees);
		
		
	}
	public static int solution(String skill, String[] skill_trees) {
		int answer = 0;
      	char[] skill1=skill.toCharArray();
        String[] result=new String[skill_trees.length];
        for(int i=0; i<skill_trees.length; i++){
            char[] temp=skill_trees[i].toCharArray();
            StringBuilder builder=new StringBuilder();
            for(int j=0; j<skill.length(); j++){
                for(int k=0; k<skill_trees[i].length(); k++){
                    if(skill1[j]==temp[k]){
                        builder.append(skill1[j]);
                    }
                }
            }
            result[i]=builder.toString();
        }
        for(int i=0; i<result.length; i++){
            if(result[i].length()==0){
                answer++;
            }else if(result[i].equals(skill)){
                answer++;
            }else if(skill.contains(result[i])){
                answer++;
            }
        }
        return answer;
   }
}
